!!!
%html
  %head
    %meta{:charset => 'UTF8'}
    %meta{:content => "text/html", "http-equiv" => "Content-Type"}/
    -#
      %meta{:content => "http:#{asset_path("logo/usgc/#{@logo_file}")}", :property => "og:image"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %meta{:property => "og:title", :content => "U.S. Go Congress #{@year.year}"}
    %meta{:property => "og:description", :content => "2018's annual Go Congress will be held in Williamsburg, Virginia from July 21 â€“ 28, hosted by the National Go Center."}
    %meta{:property => "og:image", :content => image_path('2018/og-image.png')}
    %meta{:property => "og:image:type", :content => "image/png"}
    %meta{:property => "og:image:alt", :content => "The 2018 Go Congress Logo, a badass eagle with a shield that has a go game on it"}
    %meta{:property => "og:image:width", :content => "1156"}
    %meta{:property => "og:image:height", :content => "308"}
    = favicon_link_tag "favicon.png"
    %title
      U.S. Go Congress
      = @year.year
      - unless controller_name == "home" and action_name == "index"
        = "- #{page_title}"

    = csrf_meta_tag
    = javascript_include_tag :application
    - if @year.year == 2018
      = stylesheet_link_tag '2018/application'
    - else
      = stylesheet_link_tag :application
    = stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/themes/ui-lightness/jquery-ui.css'
    - if Rails.env.production?
      = render 'shared/google_analytics'

    - if request.path_info.include?('charts')

      = javascript_include_tag '//cdn.jsdelivr.net/d3js/3.5.17/d3.min.js'
      = javascript_include_tag '//cdn.jsdelivr.net/npm/taucharts@1/build/production/tauCharts.min.js'
      = stylesheet_link_tag '//cdn.jsdelivr.net/npm/taucharts@1/build/production/tauCharts.min.css'

      = javascript_include_tag 'lib/chartist.min'
      = javascript_include_tag 'lib/chartist-plugin-months-axis'
      = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/chartist-plugin-legend/0.6.2/chartist-plugin-legend.min.js'
      = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.1/moment.min.js'
      = javascript_include_tag 'charts'
      = stylesheet_link_tag 'charts'

  %body{:class => "#{@bodyClassList} year#{@year.year}"}
    .body-container
      = render "#{@year.year}/layouts/header" rescue render '/layouts/header'
      = render "#{@year.year}/layouts/nav" rescue render '/layouts/nav'
      .content
        - if flash[:notice]
          .flash.flash-notice= notice
        - if flash[:alert]
          .flash.flash-alert= alert
        = yield
        .clear
      = yield :before_footer
      = render "#{@year.year}/layouts/footer" rescue render '/layouts/footer'
